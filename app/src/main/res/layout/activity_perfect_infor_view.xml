<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_money_product_back"
    android:orientation="vertical"
    tools:context="com.example.bankapp.perfectInfor.PerfectInforView">

    <include layout="@layout/layout_common_top" />

    <View style="@style/style_register_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_info_top" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/string_perfect_complite"
                    android:textColor="@color/color_main_function_item"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px"
                    android:paddingLeft="30px"
                    android:paddingTop="30px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/string_perfect_name"
                        android:textColor="@color/color_main_function_item"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/string_perfect_hint"
                        android:textColorHint="@color/color_perfect_info_edit_hint" />
                </LinearLayout>

                <View style="@style/style_main_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px"
                    android:paddingLeft="30px"
                    android:paddingTop="30px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/string_perfect_idcard"
                        android:textColor="@color/color_main_function_item"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_idcard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/string_perfect_hint"
                        android:inputType="text"
                        android:textColorHint="@color/color_perfect_info_edit_hint" />
                </LinearLayout>

                <View style="@style/style_main_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="30px"
                    android:paddingLeft="30px"
                    android:paddingTop="30px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/string_perfect_phone"
                        android:textColor="@color/color_main_function_item"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_telphone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/string_perfect_hint"
                        android:inputType="number"
                        android:textColorHint="@color/color_perfect_info_edit_hint" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_perfect_agree"
                    android:textColor="@color/color_perfect_info_agreement" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《"
                    android:textColor="@color/color_money_current_item_three" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_perfect_agreement"
                    android:textColor="@color/color_perfect_info_agreement" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》"
                    android:textColor="@color/color_money_current_item_three" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="match_parent"
                android:layout_height="67px"
                android:layout_marginTop="30px"
                android:background="@color/color_money_current_item_three"
                android:gravity="center"
                android:text="@string/string_perfect_finish"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <include layout="@layout/layout_register_tip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <View
            style="@style/style_main_line"
            android:layout_below="@id/ll_function" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_main_bottom_logo" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
