<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15px">

    <TextView
        android:id="@+id/tv_moneyIntroduceQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_main_function_item"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_moneyIntroduceAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:lines="1"
        android:text=""
        android:textColor="@color/color_main_function_item"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_moneyIntroduceAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_main_function_item"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_moneyIntroduceExpression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_main_function_item"
        android:textSize="20sp" />
</LinearLayout>